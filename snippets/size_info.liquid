<div class="drawer drawer-right">
  
  <a class="sr-only sr-only-focusable" href="#content" tabindex="1">Skip to main content</a>

<header role="banner">
  <div class="drawer-header">
    <button type="button" class="drawer-toggle drawer-hamburger">
      <span class="sr-only">toggle navigation</span>
      <span class="drawer-hamburger-icon"></span>
    </button>
  </div>

  <div class="drawer-main drawer-default">
    <nav class=" drawer-nav" role="navigation">
     
      
      <ul class="drawer-menu">
        <li class="drawer-menu-item">
          <a href="https://github.com/blivesta/drawer" target="_blank">Download on GitHub</a>
        </li>
        
      </ul>
      <div class="drawer-footer">
        <span></span>
      </div>
    </nav>
  </div>
  <!-- /.drawer-main -->
</header>
<!-- /.site-header -->
<div class="drawer-overlay">

  <main id="content" class="masthead" role="main" tabindex="-1">
    <div class="container">
     
 
    </div>
  </main>
</div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var drawer = document.querySelector('.drawer');
    var drawerApiToggle = document.querySelector('.drawer-api-toggle');
    var drawerDropdownHover = document.querySelectorAll('.drawer-dropdown-hover');

    // Initialize drawer (assuming a custom method to initialize the drawer)
    if (drawer && typeof drawer.drawer === 'function') {
        drawer.drawer();
    }

    // Toggle drawer on button click
    if (drawerApiToggle) {
        drawerApiToggle.addEventListener('click', function() {
            if (drawer && typeof drawer.drawer === 'function') {
                drawer.drawer("open");
            }
        });
    }

    // Log 'opened' event
    if (drawer) {
        drawer.addEventListener('drawer.opened', function() {
            console.log('opened');
        });

        // Log 'closed' event
        drawer.addEventListener('drawer.closed', function() {
            console.log('closed');
        });
    }

    // Dropdown hover functionality
    drawerDropdownHover.forEach(function(element) {
        element.addEventListener('mouseover', function() {
            var dropdownToggle = element.querySelector('[data-toggle="dropdown"]');
            if (dropdownToggle) {
                dropdownToggle.click();
            }
        });
    });
});

</script>
