<style>
  video.landing-hero-video__video {
    width: 100%;
}
  .landing__hero-video-wrap {
    position: relative;
}
  .landing-hero-video__content {
    position: absolute;
    
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 15px;
}
  .landing-hero-video__content.content-position-middle {
    top: 0;
    bottom: 0;
}
  .landing-hero-video__content.content-position-bottom {
    bottom: 0;
}
   .landing-hero-video__content.content-position-top {
    top: 0;
}
  h2.landing-hero-video__title {
    margin: 0;
    color: #ffffff;
}
  h3.landing-hero-video__subtitle {
    color: #ffffff;
}
</style>
<div class="landing__hero-video-wrap" data-section-type="hero--video">
  <a
    href=""
    class="landing-hero-video__container"
    style=""
    aria-labelledby=""
  >
    <video
      src="{{ section.settings.vdo_url }}"
      class="landing-hero-video__video"
      autoplay=""
      muted=""
      loop=""
      playsinline=""
      js-video=""
    ></video>

 
  </a>

  <div
    class="landing-hero-video__content content-position-{{ section.settings.content_position }} ">
    <div class="landing-hero-video__text">
      <h2
        id=""
        class="landing-hero-video__title"
      >
       {{ section.settings.heading }}
      </h2>

      <h3 class="landing-hero-video__subtitle">
      {{ section.settings.sub-heading }}
      </h3>
    </div>
    <div class="landing-hero-video__buttons">
      <a
        href="{{ section.settings.btn_url }}"
        class="landing-hero-video__cta button button--secondary"
        >{{ section.settings.btn_name }}</a
      >
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Landing Hero Video",
  "settings": [
     {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "background-1"
    },
    {
      "type": "text",
      "id": "vdo_url",
      "label": "Video Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default":"Lorem Ipsum is simply dummy text."
    },
    {
      "type": "textarea",
      "id": "sub-heading",
      "label": "Sub Heading",
      "default":" Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been."
    },
    {
      "type": "text",
      "id": "btn_name",
      "label": "Button Name"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    },
    {
            "type": "select",
            "id": "content_position",
            "label": "Content Position",
            "default": "bottom",
            "options": [
              {
                "label": "TOP",
                "value": "top"
              },
              {
                "value": "middle",
                "label": "MIDDLE"
              },
              {
                "label": "BOTTOM",
                "value": "bottom"
              }
            ]
          }
  ],
  "presets": [{
    "name": "Landing Hero Video"
  }]
}
{% endschema %}
