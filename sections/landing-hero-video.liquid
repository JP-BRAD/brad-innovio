<style>
  video.landing-hero-video__video {
    width: 100%;
}
  .landing__hero-video-wrap {
    position: relative;
}
  .landing-hero-video__content {
    position: absolute;
    
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 15px;
}
  .landing-hero-video__content.content-position-middle {
    top: 0;
    bottom: 0;
}
  .landing-hero-video__content.content-position-bottom {
    bottom: 0;
}
   .landing-hero-video__content.content-position-top {
    top: 0;
}
  h2.landing-hero-video__title {
    margin: 0;
    color: #ffffff;
}
  h3.landing-hero-video__subtitle {
    color: #ffffff;
}
</style>
<div class="landing__hero-video-wrap" data-section-type="hero--video">
  <a
    href=""
    class="landing-hero-video__container"
    style=""
    aria-labelledby=""
  >
    <video
      src="https://cdn.shopify.com/videos/c/o/v/0848f104e0a146efbf70e5d987a0bf0c.mp4"
      class="landing-hero-video__video"
      autoplay=""
      muted=""
      loop=""
      playsinline=""
      js-video=""
    ></video>

 
  </a>

  <div
    class="landing-hero-video__content content-position-{{ section.settings.content_position }} ">
    <div class="landing-hero-video__text">
      <h2
        id=""
        class="landing-hero-video__title"
      >
       {{ section.settings.heading }}
      </h2>

      <h3 class="landing-hero-video__subtitle">
      {{ section.settings.sub-heading }}
      </h3>
    </div>
    <div class="landing-hero-video__buttons">
      <a
        href=""
        class="landing-hero-video__cta button button--secondary"
        >VIEW THE BLOG</a
      >
    </div>
  </div>
</div>
