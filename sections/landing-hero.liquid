<style>
    .landing__hero-wrap {
      position: relative;
  }
    .landing-hero__content {
      position: absolute;
      bottom: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 0 15px;
  }
    a.landing-hero__cta {
      background: transparent;
  }
</style>
<div class="landing__hero-main">
  <div class="landing__hero-wrap" style="">
    <a
      href=""
      aria-labelledby=""
      class="landing-hero__container relative block w-full z-[0]"
    >
      <img
        alt=""
        srcset="{{ section.settings.image_for_desktop | img_url:'' }}"
        loading="lazy"
        class="small-hide"
        style="width: 100%;"
      >

      <img
        alt=""
        srcset="{{ section.settings.image_for_mobile | img_url:'' }}"
        loading="lazy"
        class="medium-hide large-up-hide"
        style="width: 100%;"
      >
    </a>

    <div
      class="landing-hero__content"
      style=""
    >
      <div class="landing-hero__text">
        <h2
          class="landing-hero__title"
          id=""
        >
         {{ section.settings.heading }}
        </h2>

        <h3 class="landing-hero__subtitle">
          {{ section.settings.subheading }}
        </h3>
      </div>
      <div class="landing-hero__buttons">
        <a
          href="{{ section.settings.link }}"
          class="landing-hero__cta button button--secondary"
          >{{ section.settings.button_label }}</a
        >

        <a
          href="{{ section.settings.link }}"
          class="landing-hero__cta button button--secondary"
          >{{ section.settings.button_label }}</a
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Landing Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_for_desktop",
      "label": "Image for Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_for_mobile",
      "label": "Image for Mobile"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Lorem Ipsum is simply dummy text.",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been.",
      "label": "Sub-Heading"
    },
    {
     "type": "text",
     "id": "button_label",
     "default": "Button label",
     "label": "Button Label"
     },
     {
     "type": "url",
     "id": "link",
     "label": "Link"
     }
  ],
  "presets": [
    {
      "name": "Landing Hero"
    }
  ]
}
{% endschema %}
