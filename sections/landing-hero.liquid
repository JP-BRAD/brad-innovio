<style>
  .landing__hero-wrap {
    position: relative;
}
  .landing-hero__content {
    position: absolute;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}
</style>
<div class="landing__hero-main">
  <div class="landing__hero-wrap" style="">
    <a
      href=""
      aria-labelledby=""
      class="landing-hero__container relative block w-full z-[0]"
    >
      <img
        alt=""
        srcset="{{ section.settings.image | img_url:'' }}"
        loading="lazy"
        class="w-full"
        style="width: 100%;"
      >
    </a>

    <div
      class="landing-hero__content"
      style=""
    >
      <div class="landing-hero__text">
        <h2
          class="landing-hero__title"
          id=""
        >
          Kith for Birkenstock London Braided Summer 2024
        </h2>

        <h3 class="landing-hero__subtitle">
          Our exclusive collaboration with Birkenstock returns in two all-new pastel colorways.
        </h3>
      </div>
      <div class="landing-hero__buttons">
        <a
          href=""
          class="landing-hero__cta"
          >SHOP NOW</a
        >

        <a
          href=""
          class="landing-hero__cta"
          >EXPLORE NOW</a
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "landing-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "landing-hero"
    }
  ]
}
{% endschema %}
